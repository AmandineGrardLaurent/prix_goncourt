@startuml

left to right direction
skin rose


actor utilisateur as US
actor membre_jury as MJ
actor president as PR

    

package System {
    usecase "Se connecter" as CONNECTE
    usecase "Afficher une sélection" as AFFICHE_SELECTION
    usecase "Afficher les infos d'un livre" as AFFICHE_LIVRE
    usecase "Voter pour un livre" as VOTE
    usecase "Gérer les votes" as GERE_VOTE
    usecase "Ajouter les livres\n de chaque sélection" as REGISTER_SELECTION
    usecase "Ajouter le nombre\nde votes de la\nselection 3" as REGISTER_VOTE
}

US --> AFFICHE_SELECTION
MJ --> VOTE
PR --> GERE_VOTE

US <|-- MJ
MJ <|-- PR

VOTE ..> CONNECTE : <<include>>
GERE_VOTE ..> CONNECTE : <<include>>
GERE_VOTE <|.. REGISTER_SELECTION : <<include>>
GERE_VOTE <|.. REGISTER_VOTE : <<include>>
AFFICHE_SELECTION <|.. AFFICHE_LIVRE : <<extend>>
VOTE ..> AFFICHE_SELECTION : <<include>>


@enduml
